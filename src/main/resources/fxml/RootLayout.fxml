<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<BorderPane prefHeight="624.0" prefWidth="739.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.outlookklon.fxcontroller.RootController">
    <top>
        <VBox>
            <MenuBar BorderPane.alignment="CENTER">
                <menus>
                    <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                        <items>
                            <Menu fx:id="newMenu" mnemonicParsing="false" text="New">
                                <items>
                                    <MenuItem fx:id="newMail" mnemonicParsing="false" onAction="#onNewMail" text="E-Mail" />
                                    <MenuItem fx:id="newContact" mnemonicParsing="false" onAction="#onNewContact" text="Contact" />
                                    <MenuItem fx:id="newAppointment" mnemonicParsing="false" onAction="#onNewAppointment" text="Appointment" />
                                </items>
                            </Menu>
                            <MenuItem fx:id="close" mnemonicParsing="false" onAction="#onClose" text="Close" />
                        </items>
                    </Menu>
                    <Menu fx:id="extrasMenu" mnemonicParsing="false" text="Extras">
                        <items>
                            <MenuItem fx:id="openAddressBook" mnemonicParsing="false" onAction="#onOpenAddressBook" text="Address book" />
                            <MenuItem fx:id="openAppointmentCalendar" mnemonicParsing="false" onAction="#onOpenAppointmentCalendar" text="Calendar" />
                            <SeparatorMenuItem mnemonicParsing="false" />
                            <Menu fx:id="languageMenu" mnemonicParsing="false" text="Languages" />
                            <SeparatorMenuItem mnemonicParsing="false" />
                            <MenuItem fx:id="openAccountSettings" mnemonicParsing="false" onAction="#onOpenAccountSettings" text="Account settings" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <items>
                    <Button fx:id="receive" mnemonicParsing="false" text="Receive" />
                </items>
            </ToolBar>
        </VBox>
    </top>
    <bottom>
        <VBox prefHeight="25.0" prefWidth="613.0" BorderPane.alignment="CENTER" />
    </bottom>
    <center>
        <fx:include fx:id="rootMailPane" source="RootMailLayout.fxml"/>
    </center>
</BorderPane>
