<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<BorderPane prefHeight="624.0" prefWidth="739.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.outlookklon.fxcontroller.RootController">
    <top>
        <VBox>
            <MenuBar BorderPane.alignment="CENTER">
                <menus>
                    <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                        <items>
                            <Menu fx:id="newMenu" mnemonicParsing="false" text="New">
                                <items>
                                    <MenuItem fx:id="newMail" mnemonicParsing="false" onAction="#onNewMail" text="E-Mail" />
                                    <MenuItem fx:id="newContact" mnemonicParsing="false" onAction="#onNewContact" text="Contact" />
                                    <MenuItem fx:id="newAppointment" mnemonicParsing="false" onAction="#onNewAppointment" text="Appointment" />
                                </items>
                            </Menu>
                            <MenuItem fx:id="close" mnemonicParsing="false" onAction="#onClose" text="Close" />
                        </items>
                    </Menu>
                    <Menu fx:id="extrasMenu" mnemonicParsing="false" text="Extras">
                        <items>
                            <MenuItem fx:id="openAddressBook" mnemonicParsing="false" onAction="#onOpenAddressBook" text="Address book" />
                            <MenuItem fx:id="openAppointmentCalendar" mnemonicParsing="false" onAction="#onOpenAppointmentCalendar" text="Calendar" />
                            <SeparatorMenuItem mnemonicParsing="false" />
                            <Menu fx:id="languageMenu" mnemonicParsing="false" text="Languages" />
                            <SeparatorMenuItem mnemonicParsing="false" />
                            <MenuItem fx:id="openAccountSettings" mnemonicParsing="false" onAction="#onOpenAccountSettings" text="Account settings" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <items>
                    <Button fx:id="receive" mnemonicParsing="false" text="Receive" />
                </items>
            </ToolBar>
        </VBox>
    </top>
    <bottom>
        <VBox prefHeight="25.0" prefWidth="613.0" BorderPane.alignment="CENTER" />
    </bottom>
    <center>
        <SplitPane dividerPositions="0.2" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <AnchorPane>
                    <children>
                        <TreeView prefHeight="160.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <SplitPane dividerPositions="0.5" orientation="VERTICAL" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" SplitPane.resizableWithParent="false">
                            <items>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                                    <children>
                                        <TableView fx:id="emailGrid" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <placeholder>
                                                <Label text=""/>
                                            </placeholder>
                                            <columns>
                                                <TableColumn fx:id="mailInfoColumn" editable="false" prefWidth="75.0" text="MailInfo" visible="false" />
                                                <TableColumn fx:id="subjectColumn" editable="false" prefWidth="75.0" text="Subject" />
                                                <TableColumn fx:id="fromColumn" editable="false" prefWidth="75.0" text="From" />
                                                <TableColumn fx:id="dateColumn" editable="false" prefWidth="75.0" text="Date" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </AnchorPane>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                                    <children>
                                        <WebView AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                    </children>
                                </AnchorPane>
                            </items>
                        </SplitPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
